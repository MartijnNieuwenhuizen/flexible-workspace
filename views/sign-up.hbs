<!-- get header -->

<main>
	<form action="/user/sign-up" method="post" class="sign-up">
		<legend>Sign up</legend>

		<label for="username">email/username</label>
		<div>
			<input type="text" id="username" name="username" class="input-username" value="{{name}}">
			<span>@damco.com</span>
		</div>
		
		<input type="checkbox" id="email" name="email">
		<label for="email">receive an email when all spots are occupied the next day</label>
	
		<p>Required desk</p>
		<label for="flex">flex desk</label>
		<input type="radio" id="flex" name="desk" value="flexDesk" checked>
		<label for="fixed">fixed desk</label>
		<input type="radio" id="fixed" name="desk" value="fixedDesk">

		<input type="submit" value="Sign up">
	</form>
</main>